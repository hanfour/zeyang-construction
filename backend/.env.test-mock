# Test Environment Variables with Mock Database
NODE_ENV=test-mock
PORT=3001
USE_MOCK_DB=true

# Database (not used with mock)
DB_HOST=127.0.0.1
DB_USER=root
DB_PASSWORD=123456
DB_NAME=estatehub_test
DB_PORT=3306

# JWT
JWT_SECRET=test-jwt-secret-key-for-testing-only
JWT_EXPIRES_IN=1d
JWT_REFRESH_EXPIRES_IN=7d
REFRESH_SECRET=test-refresh-secret-key-for-testing-only

# File Upload
MAX_FILE_SIZE=268435456
ALLOWED_FILE_TYPES=image/jpeg,image/jpg,image/png,image/gif,image/webp

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=error
SUPPRESS_LOGS=true