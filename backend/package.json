{
  "name": "ZeYang-backend",
  "version": "1.0.0",
  "description": "ZeYang Backend API Server",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest --config ./tests/jest.config.js --forceExit",
    "test:watch": "jest --config ./tests/jest.config.js --watch",
    "test:coverage": "jest --config ./tests/jest.config.js --coverage",
    "test:auth": "jest --config ./tests/jest.config.js auth.test.js",
    "test:projects": "jest --config ./tests/jest.config.js projects.test.js",
    "test:contacts": "jest --config ./tests/jest.config.js contacts.test.js",
    "test:tags": "jest --config ./tests/jest.config.js tags.test.js",
    "test:system": "jest --config ./tests/jest.config.js system.test.js",
    "test:mock": "USE_MOCK_DB=true NODE_ENV=test-mock jest --config ./tests/jest.config.js --forceExit",
    "test:projects:mock": "USE_MOCK_DB=true NODE_ENV=test-mock jest --config ./tests/jest.config.js projects.test.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "db:migrate": "node scripts/migrate.js",
    "db:seed": "node scripts/seed.js",
    "backup:db": "node scripts/backup.js",
    "cleanup:images": "node scripts/cleanup-images.js"
  },
  "keywords": ["estate", "real-estate", "api", "nodejs"],
  "author": "Hanfour",
  "license": "ISC",
  "dependencies": {
    "express": "^4.18.2",
    "mysql2": "^3.6.5",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "dotenv": "^16.3.1",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "winston": "^3.11.0",
    "express-validator": "^7.0.1",
    "multer": "^1.4.5-lts.1",
    "sharp": "^0.33.1",
    "uuid": "^9.0.1",
    "express-rate-limit": "^7.1.5",
    "compression": "^1.7.4",
    "swagger-ui-express": "^5.0.0",
    "yamljs": "^0.3.0",
    "nodemailer": "^6.9.7"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "eslint": "^8.55.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.29.0",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "@types/jest": "^29.5.11"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "./coverage",
    "collectCoverageFrom": [
      "**/*.js",
      "!**/node_modules/**",
      "!**/tests/**",
      "!**/coverage/**"
    ]
  }
}