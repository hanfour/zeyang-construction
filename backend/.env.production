# 澤暘建設網站 - 後端環境變數
# 生產環境設定

# 基礎設定
NODE_ENV=production
PORT=5001

# 資料庫連線（需要廠商提供）
DB_HOST=localhost
DB_PORT=3306
DB_NAME=zeyang
DB_USER=your_db_user
DB_PASSWORD=your_db_password

# JWT 認證
JWT_SECRET=zeyang-jwt-secret-2024-please-change-this
JWT_EXPIRES_IN=24h
REFRESH_SECRET=zeyang-refresh-secret-2024-please-change
REFRESH_EXPIRES_IN=7d

# CORS 設定
CLIENT_URL=https://zeyanggroup.com.tw
ALLOWED_ORIGINS=https://zeyanggroup.com.tw,https://www.zeyanggroup.com.tw

# 檔案上傳
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=268435456

# 日誌
LOG_LEVEL=info
ENABLE_SWAGGER=false